<index-page>

<after-content-body:>


<div id="calendar">
  <h2 id="month">
    <%=h @date.strftime("%B,%Y") %>
  </h2>
<% @tasks=%>

<%= calendar_for(@tasks, :first_day_of_week => 1) do |t| %>
  <%= t.head('LUNES', 'MARTES', 'MIÉRCOLES', 'JUEVES', 'VIERNES', 'SÁBADO', 'DOMINGO') %>
   <%= t.day do |day, tasks| %>
    <a href="/workdays/new?day=#{day.to_s}"><%= day.day %></a>
  <% end %>
<% end %>
</div>

</after-content-body:>

</index-page>
